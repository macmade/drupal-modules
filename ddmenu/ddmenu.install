<?php

function ddmenu_install()
{
    $oopWeight = (int)db_result( db_query( "SELECT weight FROM {system} WHERE name = 'oop'" ) );
    db_query( "UPDATE {system} SET weight = %d WHERE name = 'ddmenu'", $oopWeight + 1 );
}

function ddmenu_uninstall()
{
    Oop_Drupal_Utils::getInstance()->deleteModuleVariables( 'ddmenu' );
}
