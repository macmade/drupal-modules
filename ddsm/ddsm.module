<?php

function ddsm_help( $path, $arg )
{
    return Oop_Core_ClassManager::getInstance()->getModule( 'ddsm' )->help( $path, $arg );
}

function ddsm_perm()
{
    return Oop_Core_ClassManager::getInstance()->getModule( 'ddsm' )->perm();
}

function ddsm_block( $op = 'list', $delta = 0 )
{
    return Oop_Core_ClassManager::getInstance()->getModule( 'ddsm' )->block( $op, $delta );
}
