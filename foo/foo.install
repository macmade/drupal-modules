<?php

function foo_install()
{
    $oopWeight = (int)db_result( db_query( "SELECT weight FROM {system} WHERE name = 'oop'" ) );
    db_query( "UPDATE {system} SET weight = %d WHERE name = 'foo'", $oopWeight + 1 );
}

function foo_uninstall()
{
    Oop_Drupal_Utils::getInstance()->deleteModuleVariables( 'foo' );
}
